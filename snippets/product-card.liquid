{% liquid
  assign current_varient = product.selected_or_first_available_variant
  assign featured_image = current_varient.image | default : product.featured_image
%}

<product-card>
  <a href="{{ product.url }}">
    <div class="product-card__image">
      {% render "responsive-image", desktopImage: featured_image, class: "media media--square" %}
      <div class="product-card__content">
        <h3> {{ current_varient.vendor }} </h3>
        <h2> {{ current_varient.title }} </h2>
      </div>
    </div>
  </a>
</product-card>