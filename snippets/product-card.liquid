{% liquid
  assign current_varient = product.selected_or_first_available_variant
  assign featured_image = current_varient.image | default : product.featured_image
  
%}

<product-card>
  <a href="{{ product.url }}">
    <div class="product-card__image media media--square">
      {% render "responsive-image", desktopImage: featured_image, class: "" %}
    </div>
  </a>
</product-card>