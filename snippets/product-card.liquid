{% liquid
  assign current_varient = product.selected_or_first_available_variant
  assign featured_image = current_varient.image | default : product.featured_image
  assign second_image = product.images[1] | default : product.featured_image
  
%}

<product-card>
  <a href="{{ product.url }}">
    <div class="media media--square media--hover-effect">
      {% render "image", featured_image: featured_image, secondary_image: second_image %}
      
    </div>
  </a>
</product-card>