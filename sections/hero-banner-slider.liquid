{% schema %}
{
  "name": "Hero Banner Slider",
  "tag" : "section",
  "settings" : [
    {
      "type" : "header",
      "content" : "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type" : "header",
      "content" : "Text Content Settings"
    },
    {
      "type": "text",
      "id" : "banner_caption",
      "label" : "Banner Caption"
    },
    {
      "type": "text",
      "id" : "banner_heading",
      "label" : "Banner Heading"
    },
    {
      "type": "text",
      "id" : "banner_button_text",
      "label" : "Button Text"
    },
    {
      "type" : "url",
      "id" : "banner_button_link",
      "label" : "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "banner_color_scheme",
      "label": "Color Scheme",
      "default": "scheme_1"
    },
    {
      "type" : "header",
      "content" : "Section Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile image"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Upload Design Video"
        },
        {
          "type": "text",
          "id": "pre_heading",
          "label": "Pre Heading",
          "default": "WEAR TECHNOLOGY"
        },
        {
          "type": "text",
          "id": "heading_text_one",
          "label": "Heading Text One",
          "default": "What’s the time? It’s"
        },
        {
          "type": "text",
          "id": "heading_text_two",
          "label": "Heading Text Two",
          "default": "time to wear tech"
        },
        {
          "type": "text",
          "id": "description_text_one",
          "label": "Description Text One",
          "default": "Smart watches can run apps and play back all sorts of digital media, "
        },
        {
          "type": "text",
          "id": "description_text_two",
          "label": "Description Text Two",
          "default": "like radio streamed to Bluetooth headphones."
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Buy Now - $120"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "shop_all_button_label",
          "label": "Shop All label",
          "default": "Shop Deals"
        },
        {
          "type": "url",
          "id": "shop_button_link",
          "label": "Shop All Link"
        },
        {
          "type": "color",
          "id": "pre_heading_color",
          "label": "Pre Heading color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "heading_text_one_color",
          "label": "Heading Text One color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "heading_text_two_color",
          "label": "Heading Text Two color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "description_text_one_color",
          "label": "Description Text One Color",
          "default": "#fff"
        },
        {
          "type": "color",
          "id": "description_text_two_color",
          "label": "Description Text Two Color",
          "default": "#fff"
        },

        {
          "type": "color",
          "id": "shop_all_color",
          "label": "Shop All",
          "default": "#fff"
        },

        {
          "type": "color",
          "id": "button_bg",
          "label": "Button background",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "button_color",
          "label": "Button color",
          "default": "#000000"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "Right",
              "label": "Right"
            }
          ],
          "default": "left"
        },

        {
          "type": "select",
          "id": "vertical_alignment",
          "label": "Vertical alignment",
          "options": [
            {
              "value": "start",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "End"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "horizantal_alignment",
          "label": "Horizantal alignment",
          "options": [
            {
              "value": "start",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "Right"
            }
          ],
          "default": "center"
        }
      ]
