{{ "section-hero-banner-slider.css" | asset_url | stylesheet_tag }}
<script src="{{ "custom-slider.js" | asset_url }}" defer></script>

{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

  {% for block in section.blocks %}
    .hero-banner-slider__position-{{ block.id }}{
      justify-content: {{ block.settings.vertical_alignment }};
      align-items : {{ block.settings.horizantal_alignment }};
    }

    .hero-banner-slider__text-alignment-{{ block.id }}{
        text-align : {{ block.settings.text_alignment }};
      }

    

  {% endfor %}}  

  
  
{% endstyle %}


<div class="hero-banner-slider padding-{{ section.id }}">
  <div class="page-width">
    <custom-slider>    
      <section class="splide" aria-label="Splide Basic HTML Example">
        <div class="splide__track">
          <ul class="splide__list">
            {% if section.blocks != blank %} 
              {% for block in section.blocks %}
                <li class="splide__slide hero-banner-slider__slide">
                  <div class="hero-banner-slider__image-container">
                    {% if block.settings.desktop_image != blank and block.settings.mobile_image != blank %}
                      {% render "responsive-image" desktopImage: block.settings.desktop_image, mobileImage: block.settings.mobile_image, class:""  %}
                    {% endif %}  
                  </div>
                  <div class="hero-banner-slider__text-container hero-banner-slider__position-{{ block.id }}">
                    <div class="hero-banner-slider_text hero-banner-slider__text-alignment-{{ block.id }} ">                    
                      {% if block.settings.banner_caption != blank %}
                        <h2 class="h3">{{ block.settings.banner_caption }}</h2>
                      {% endif %}  
                      {% if block.settings.banner_heading != blank %}
                        <div class="h1"> {{ block.settings.banner_heading }} </div>
                      {% endif %}  
                      {% if block.settings.banner_button_text != blank %}
                        <button class="button">{{ block.settings.banner_button_text }}</button>
                      {% endif %}  
                    </div>
                  </div>
                </li>
              {% endfor %}
            {% else %}
              {% for i in (1..3) %}
                <li class="splide__slide">
                    {{ 'product-' | append: i | placeholder_svg_tag }}
                </li> 
              {% endfor %}
            {% endif %} 
          </ul>
        </div>
      </section> 
    </custom-slider>
  </div>
</div>


{% schema %}
{
  "name": "Hero Banner Slider",
  "tag" : "section",
  "settings" : [
    {
      "type" : "header",
      "content" : "Section Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Banner",
      "type": "banner",
      "settings": [
        {
          "type" : "header",
          "content" : "Image Settings"
        },
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type" : "header",
          "content" : "Text Content Settings"
        },
        {
          "type": "text",
          "id" : "banner_caption",
          "label" : "Banner Caption",
          "default" : "Women's Apparel"
        },
        {
          "type": "richtext",
          "id" : "banner_heading",
          "label" : "Banner Heading",
          "default" : "<p> Elevate your wardrobe with our limited-time fashion offer! <p>"
        },
        {
          "type": "text",
          "id" : "banner_button_text",
          "label" : "Button Text",
          "default" : "Explore more"
        },
        {
          "type": "url",
          "id" : "banner_button_link",
          "label" : "Button Link"
        },
        {
          "type": "color_scheme",
          "id": "banner_color_scheme",
          "label": "Color Scheme",
          "default": "scheme_1"
        },
        {
          "type" : "header",
          "content" : "Alignment Settings"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type": "select",
          "id": "vertical_alignment",
          "label": "Vertical alignment",
          "options": [
            {
              "value": "start",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "End"
            }
        ],
        "default": "center"
        },
        {
          "type": "select",
          "id": "horizantal_alignment",
          "label": "Horizantal alignment",
          "options": [
          {
            "value": "start",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "end",
            "label": "Right"
          }
        ],
        "default": "center"
        },
        {
          "type" : "header",
          "content" : "Slider Settings"
        },
        {
          "type": "select",
          "id": "slider_autoplay",
          "label": "Slider Autoplay",
          "options": [
          {
            "value": "true",
            "label": "Yes"
          },
          {
            "value": "false",
            "label": "No"
          }
        ],
        "default": "true"
        },
        {
          "type": "number",
          "id": "slider_autoplay_duration",
          "label": "Slider Autoplay Duration",
          "default": 2000
        }
  ]
  }
  ],
  "presets" : [
    {
      "name" : "Hero Banner Slider"
    }
  ]
}
{% endschema %}
