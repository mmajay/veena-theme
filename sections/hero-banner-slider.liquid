<script src="{{ "custom-slider.js" | asset_url }}" defer></script>

{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }

    }
{% endstyle %}


<div class="hero-banner-slider padding-{{ section.id }}">
  <div class="page-width">
    <custom-slider>    
      <section class="splide" aria-label="Splide Basic HTML Example">
        <div class="splide__track">
          <ul class="splide__list">
            {% for block in section.blocks %}
              <li class="splide__slide">
                {% render "responsive-image" desktopImage: block.settings.desktop_image, mobileImage: block.settings.mobile_image, class:""  %}
              </li>
            {% endfor %}  
          </ul>
        </div>
      </section> 
    </custom-slider>
  </div>
</div>


{% schema %}
{
  "name": "Hero Banner Slider",
  "tag" : "section",
  "settings" : [
    {
      "type" : "header",
      "content" : "Section Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "name": "Banner",
      "type": "banner",
      "settings": [
        {
      "type" : "header",
      "content" : "Image Settings"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type" : "header",
      "content" : "Text Content Settings"
    },
    {
      "type": "text",
      "id" : "banner_caption",
      "label" : "Banner Caption"
    },
    {
      "type": "text",
      "id" : "banner_heading",
      "label" : "Banner Heading"
    },
    {
      "type": "text",
      "id" : "banner_button_text",
      "label" : "Button Text"
    },
    {
      "type" : "url",
      "id" : "banner_button_link",
      "label" : "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "banner_color_scheme",
      "label": "Color Scheme",
      "default": "scheme_1"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "Right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "end",
          "label": "End"
        }
    ],
    "default": "center"
    },
    {
      "type": "select",
      "id": "horizantal_alignment",
      "label": "Horizantal alignment",
      "options": [
      {
        "value": "start",
        "label": "Left"
      },
      {
        "value": "center",
        "label": "Center"
      },
      {
        "value": "end",
        "label": "Right"
      }
    ],
    "default": "center"
    }
  ]
  }
  ],
  "presets" : [
    {
      "name" : "Hero Banner Slider"
    }
  ]
}
{% endschema %}
