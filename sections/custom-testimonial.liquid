{{ "section-custom-testimonial.css" | asset_url | stylesheet_tag }}
<script src="{{ "custom-slider.js" | asset_url }}" defer></script>


{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2  }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

{% endstyle %}

<div class="testimonial">
  <div class="page-width">
    
    <section class="splide" aria-label="Splide Basic HTML Example">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            
          {% endfor %}  
        </ul>
      </div>
    </section>
  </div>
</div>









{% schema %}
  {
    "name": "Custom Testimonial",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Section heading",
        "default": "Our Customers Review"
      },
      {
        "type" : "header",
        "content" : "Section padding settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "testimonia-blocks",
        "name": "Tesimonial blocks",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Person Name"
          },
          {
            "type": "text",
            "id": "designation",
            "label": "Designation",
            "default": "Add designation"
          },
          {
            "type": "richtext",
            "id": "comment",
            "label": "Comment",
            "default": "<p>Absolutely love the trendy collection! The quality is unmatched, and each piece tells a unique style story.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Custom Testimonial"
      }
    ]
  }
{% endschema %}