{% schema %}
  {
    "name": "Testimonial",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Section heading",
        "default": "Our Customers Review"
      },
      {
        "type" : "header",
        "content" : "Section padding settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "testimonia-blocks",
        "name": "Tesimonial blocks",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Person Name"
          },
          {
            "type": "text",
            "id": "designation",
            "label": "Designation",
            "default": "Add designation"
          }
        ]
      }
    ]
  }
{% endschema %}