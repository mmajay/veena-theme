{% schema %}
  {
    "name": "Custom USP",
    
    "settings": [
      {
      "type" : "header",
      "content" : "Section Padding Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type" : "usp",
        "name" : "usp",
        "settings": [
          {
            "type": "html",
            "id": "svg_embed",
            "label": "SVG embed"
          },
          {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading",
            "default" : "Heading"
          },
          {
            "type" : "richtext",
            "id" : "description",
            "label" : "Description",
            "default" : "<p>Heading<p>"
          },
          {
            "type": "color_scheme",
            "id": "banner_color_scheme",
            "label": "Color Scheme",
            "default": "scheme_2"
          },
          {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        }
        ]
      }
    ],
    "presets": [
      {
        "name" : "Custom USP"
      }
      
    ]
  }
{% endschema %}