{% style %}
  .padding-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
  }

  @media screen and (min-width: 750px) {
    .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}



{% schema %}
  {
    "name": "Custom Blogs",
    "tag": "section",
    "settings": [
       {
        "type": "blog",
        "id": "blog",
        "label": "Blogs"
      },
            {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Color Scheme"
      },
      {
          "type": "header",
          "content": "Section padding"
      },
      {
          "type": "range",
          "id": "padding_top",
          "label": "Padding top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 20
      },
      {
          "type": "range",
          "id": "padding_bottom",
          "label": "Padding bottom",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "default": 20
      }
    ],
    "presets": [
       {
         "name": "Custom Blogs"
       }
    ]
  }
{% endschema %}