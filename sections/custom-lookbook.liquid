{% schema %}
  {
    "name": "Lookbook",
    "tag" : "section",
    "settings": [
      {
      "type" : "header",
      "content" : "Section padding settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding bottom",
        "default": 36
      }
    ],
    "blocks":[
      {
        "type": "lookbook-block",
        "name": "Lookbook block",
        "settings": [
          {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Image"
          },
          
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Image (Mobile)"
          },
          
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          },
          
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
          },
          
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
          
        ]
      }
    ],
    "presets": [
      {
        "name": "Lookbook"
      }
    ]
  }
{% endschema %}