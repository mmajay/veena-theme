{{ "section-custom-lookbook.css" | asset_url | stylesheet_tag }}


{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top | divided_by: 2  }}px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

{% endstyle %}

<div class="lookbook">
  <div class="page-width">
    <div class="grid grid--1-col grid--3-col-desktop">
      {% for block in section.blocks %}
        <div class="grid__item">
          <div class="lookbook__image-container">
            <div class="lookbook__image">
              {% if block.settings.desktop_image != blank %}
                {% render "responsive-image" desktopImage:block.settings.desktop_image, mobileImage: block.settings.mobile_image  %}
              {% endif %}  
            </div>
            {% for i in (1..2) %}
              <div class="lookbook__dot lookbook__postion-{{ block.id }}">
                  <svg xmlns="http://www.w3.org/2000/svg" width="11" height="11" viewBox="0 0 11 11" fill="none" class="icon-circle">
                	<circle class="icon-circle" cx="5.5" cy="5.5" r="5.5" fill="#000"></circle>
                  </svg>
              </div>
            {% endfor %}
          </div>
          <div class="lookbook__content"></div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>





{% schema %}
  {
    "name": "Lookbook",
    "tag" : "section",
    "settings": [
      {
      "type" : "header",
      "content" : "Section padding settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section padding bottom",
        "default": 36
      }
    ],
    "blocks":[
      {
        "type": "lookbook-block",
        "name": "Lookbook block",
        "settings": [
          {
            "type": "image_picker",
            "id": "desktop_image",
            "label": "Image"
          },
          
          {
            "type": "image_picker",
            "id": "mobile_image",
            "label": "Image (Mobile)"
          },
          
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          
          {
            "type": "richtext",
            "id": "description",
            "label": "Description"
          },
          
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text"
          },
          
          {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          },
          {
            "type": "header",
            "content": "Lookbook dots settings"
          },
          {
            "type" : "product",
            "id" : "product",
            "label" : "Choose product"
          },
          {
            "type" : "range",
            "id" : "left_position",
            "label" : "Distance from left",
            "min" : 10,
            "max" : 100,
            "step" : 1,
            "default" : 20,
            "info" : "The Distance measured from left %"
          },
          {
            "type" : "range",
            "id" : "top_position",
            "label" : "Distance from Top",
            "min" : 10,
            "max" : 100,
            "step" : 1,
            "default" : 20,
            "info" : "The Distance mesured from top %"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Lookbook"
      }
    ]
  }
{% endschema %}