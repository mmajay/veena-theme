{{ "section-custom-image-with-text-grid.css" | asset_url | stylesheet_tag }}


{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top  }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

{% endstyle %}


<div class="custom-image-with-text-grid .padding-{{ section.id }}">
  <div class="page-width">
    <div class="grid grid--1-col grid--2-col-desktop">
      {% if section.blocks != blank %}
        {% for block in section.blocks %}
          <div class="grid__item custom-image-with-text-grid__position-rel">
            {% if block.settings.desktop_image != blank %}
              <div class="custom-image-with-text-grid__image-container">
                {% render "responsive-image", desktopImage:block.settings.desktop_image, mobileImage: block.settings.mobile_image  %}
              </div>
            {% else %}
              {{ "detailed-apparel-1" | placeholder_svg_tag }}
            {% endif %}

            <div class="custom-image-with-text-grid__text-container {{ block.settings.alignment_position }}">
              <div class="custom-image-with-text-grid__text-align {{ block.settings.text_alignment }}">
                
                {% if block.settings.caption != blank %}
                  <h2 class="h3"> {{ block.settings.caption }} </h2>
                {% endif %}
              
                {% if block.settings.heading != blank %}
                  <h2 class="h1"> {{ block.settings.heading }} </h2>
                {% endif %}
              
                {% if block.settings.description != blank %}
                  <h2 class="h3"> {{ block.settings.description }} </h2>
                {% endif %}
              
                {% if block.settings.button_text != blank %}
                  <a class="button" 
                    {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                    {% endif %}>{{ block.settings.banner_button_text }}</a>
                {% endif %}
          
              </div>
            </div>
          
          </div>
        {% endfor %}

      {% else %}
        {% for i in (1..2) %}
          <div class="grid__item">
            {{ 'detailed-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endfor %}
      {% endif %} 
      
    </div
  </div>
</div>




{% schema %}
  {
    "name": "Image With Text Grid",
    "tag" : "section",
    "settings": [
      {
      "type" : "header",
      "content" : "Section Padding Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type" : "imageGrid",
        "name" : "image with text",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "desktop_image",
            "label" : "Desktop Image"
          },
          {
            "type" : "image_picker",
            "id" : "mobile_image",
            "label" : "Mobile Image"
          },
          {
            "type" : "text",
            "id" : "caption",
            "label" : "Caption",
            "default" : "Pre Heading"
          },
          {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading",
            "default" : "Heading"
          },
          {
            "type" : "richtext",
            "id" : "description",
            "label" : "Description",
            "default" : "<p>Heading<p>"
          },
          {
            "type" : "text",
            "id" : "button_text",
            "label" : "Button text",
            "default" : "Shop Now"
          },
          {
            "type" : "url",
            "id" : "button_link",
            "label" : "Button Link"
          },
          {
          "type": "color_scheme",
          "id": "banner_color_scheme",
          "label": "Color Scheme",
          "default": "scheme_1"
          },
          {
          "type" : "header",
          "content" : "Alignment Settings"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },
        {
          "type" : "select",
          "id" : "alignment_position",
          "label" : "Desktop content position",
          "options" : [
            {
              "value" : "align-start justify-start",
              "label" : "Top left"
            },
            {
              "value" : "align-start justify-center",
              "label" : "Top center"
            },
            {
              "value" : "align-start justify-end",
              "label" : "Top right"
            },
            {
              "value" : "align-center justify-start",
              "label" : "Middle left"
            },
            {
              "value" : "align-center justify-center",
              "label" : "Middle center"
            },
            {
              "value" : "align-center justify-end",
              "label" : "Middle right"
            },
            {
              "value" : "align-end justify-start",
              "label" : "Bottom left"
            },
            {
              "value" : "align-end justify-center",
              "label" : "Bottom center"
            },
            {
              "value" : "align-end justify-end",
              "label" : "Bottom end"
            }
          ],
          "default": "align-center justify-center"
        }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Image With Text Grid"
      }
    ]
  }
{% endschema %}