{% schema %}
  {
    "name": "Image With Text Grid",
    "tag" : "section",
    "settings": [
      {
      "type" : "header",
      "content" : "Section Padding Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type" : "imageGrid",
        "name" : "image with text",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Upload Image"
          },
          {
            "type" : "text",
            "id" : "caption",
            "label" : "Caption",
            "default" : "Pre Heading"
          },
          {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading",
            "default" : "Heading"
          },
          {
            "type" : "richtext",
            "id" : "description",
            "label" : "Description",
            "default" : "<p>Heading<p>"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Image With Text Grid"
      }
    ]
  }
