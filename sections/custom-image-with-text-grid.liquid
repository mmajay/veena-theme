{{ "section-hero-banner-slider.css" | asset_url | stylesheet_tag }}


{% style %}
  .padding-{{ section.id }} {
      padding-top: {{ section.settings.padding_top  }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media (min-width: 750px) {
      .padding-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

{% endstyle %}


<div class="custom-image-with-text-grid">
  <div class="page-width">
    <div class="grid grid--1-col grid--2-col-desktop">
      {% if section.blocks != blank %}

      {% else %}
        <div class="grid__item">
          {{ 'detailed-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %} 
      
    </div
  </div>
</div>




{% schema %}
  {
    "name": "Image With Text Grid",
    "tag" : "section",
    "settings": [
      {
      "type" : "header",
      "content" : "Section Padding Settings"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type" : "imageGrid",
        "name" : "image with text",
        "settings" : [
          {
            "type" : "image_picker",
            "id" : "image",
            "label" : "Upload Image"
          },
          {
            "type" : "text",
            "id" : "caption",
            "label" : "Caption",
            "default" : "Pre Heading"
          },
          {
            "type" : "text",
            "id" : "heading",
            "label" : "Heading",
            "default" : "Heading"
          },
          {
            "type" : "richtext",
            "id" : "description",
            "label" : "Description",
            "default" : "<p>Heading<p>"
          },
          {
            "type" : "text",
            "id" : "button_text",
            "label" : "Button text",
            "default" : "Shop Now"
          },
          {
            "type" : "url",
            "id" : "button_link",
            "label" : "Button Link"
          }
        ]
      }
    ],
    "presets" : [
      {
        "name" : "Image With Text Grid"
      }
    ]
  }
{% endschema %}