{% schema %}
  {
    "name": "Product list",
    "settings": [
      {
      "type": "product_list",
      "id": "product_list",
      "label": "Products"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section heading",
      "default": "Featured Collection"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "header",
      "content": "Featured product settings"
    },
    {
      "type": "image_picker",
      "id": "section_image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "card_caption",
      "label": "Product card caption"
    },
    {
      "type": "text",
      "id": "card_heading",
      "label": "Card Heading"
    },
    {
      "type": "text",
      "id": "card_button_text",
      "label": "Card button text"
    },
    {
      "type": "url",
      "id": "card_button_link",
      "label": "Card button link"
    },
      
    {
      "type": "select",
      "id": "text_size",
      "label": "Text size",
      "options": [
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h2"
    },

      {
          "type" : "header",
          "content" : "Alignment Settings"
        },
        {
          "type": "select",
          "id": "text_alignment",
          "label": "Text Alignment",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left"
        },

      

      
    {
      "type" : "header",
      "content" : "Section padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 36
    }
    ],
    
    "presets": [
      {
        "name": "Product list"
      }
    ]
  }
{% endschema %}